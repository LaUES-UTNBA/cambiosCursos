!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title CambiosCursos
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    - if flash[:alert]
      = flash[:alert]
    - if flash[:notice]
      = flash[:notice]
    = yield
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = yield(:scripts)
